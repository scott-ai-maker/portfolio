{
  "routes": [
    { "route": "/api/*", "rewrite": "/api/*" },
    { "route": "/*", "rewrite": "/index.html" }
  ],
  "responseOverrides": {
    "404": {
      "statusCode": 404,
      "rewrite": "/index.html"
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; img-src 'self' data: https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https:;",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "no-referrer-when-downgrade",
    "X-Frame-Options": "DENY"
  }
}
